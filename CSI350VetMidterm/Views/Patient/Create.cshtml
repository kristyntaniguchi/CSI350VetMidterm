@*
    Patient Create
*@
@model Patient

@{
    ViewData["Title"] = "New Patient Form";
}

<div class="container mb-4">
    <div class="row justify-content-between vet-details-header">
        <div class="col">
            <h1 class="text-color-blue mb-4 ">New Patient Form</h1>

        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-auto">
                <div class="row align-items-center me-3">
                    <a class="btn button-color-seafoam  " asp-controller="Patient" asp-action="Create">New Pet Form</a>
                </div>
            </div>

        }
    </div>



    <div class="row">
        <div class="col-md-4 text-color-blue mb-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control mb-3 " />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="Species" class="control-label"></label>
                    <input asp-for="Species" class="form-control mb-3 " />
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="Breed" class="control-label"></label>
                    <input asp-for="Breed" class="form-control mb-3 " />
                    <span asp-validation-for="Breed" class="text-danger"></span>
                </div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control mb-3 " />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="Medications" class="control-label"></label>
                    <input asp-for="Medications" class="form-control mb-3 " />
                    <span asp-validation-for="Medications" class="text-danger"></span>
                </div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="MedicalHistory" class="control-label"></label>
                    <input asp-for="MedicalHistory" class="form-control mb-3 " />
                    <span asp-validation-for="MedicalHistory" class="text-danger"></span>
                </div>
                <div class="form-group mt-1 mb-1">
                    <label asp-for="ImgURL" class="control-label"></label>
                    <input asp-for="ImgURL" class="form-control mb-3 " />
                    <span asp-validation-for="ImgURL" class="text-danger"></span>
                </div>

                <div class="form-group mt-3 mb-4 ">
                    <input type="submit" value="Create" class="btn button-color-apple-blue " />
                    <a class="btn btn-secondary  ms-2" asp-controller="Patient" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
