@*
    Vet Details
*@
@model Veterinarian

@{
    ViewData["Title"] = $"Meet Dr. {Model.Name}";
}

<h2>Meet Dr. @Model.Name</h2>
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src=@Html.DisplayFor(Model => Model.ImgURL) class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Dr. @Model.Name</h5>
                <p class="card-text">@Model.Bio</p>
                <p class="card-text"><small class="text-body-secondary">Dr. @Model.Name has @Model.YearsExperience years of experience.</small></p>
            </div>
        </div>
    </div>

    @*Hide edit and delete buttons if the user isn't an admin*@

        <div class="row mt-4 mb-3">
            <div class="col-7"></div>
            <a class="btn btn-secondary col-2 ms-2" asp-controller="Veterinarian" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-danger col-2 ms-2" asp-controller="Veterinarian" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div>
    
</div>